<style>
    #map {
        width: 100%;
        height: 75vh;
        min-height: 400px;
        max-height: 800px;
        margin-bottom: 0;
        border-radius: 10px;
        border: 1px solid #444;
        box-shadow: 0 2px 8px #000a;
    }
    .legend-container {
        background: transparent;
        color: #e0c97f;
    }
    .legend-item {
        transition: transform 0.2s ease;
    }
    .legend-item:hover {
        transform: scale(1.05);
    }
    .legend-item img {
        display: block;
        margin: 0 auto;
    }
    .legend-item div {
        font-size: 0.85rem;
        color: #DAA520;
        text-align: center;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 100%;
    }
    
    .legend-item img {
        width: 35px !important;
        height: 35px !important;
    }
    
    .legend-item {
        min-width: 70px !important;
    }
    
    /* Responsive optimizacije */
    @@media (max-width: 768px) {
        #map {
            height: 70vh;
            min-height: 300px;
        }
        
        h1 {
            font-size: 1.4rem !important;
        }
        
        h1 span {
            font-size: 1rem !important;
        }
        
        .legend-title {
            font-size: 1rem !important;
        }
        
        .legend-item div {
            font-size: 0.8rem !important;
        }
        
        .legend-item img {
            width: 30px !important;
            height: 30px !important;
        }
    }
    
    @@media (min-width: 1200px) {
        #map {
            height: 78vh;
            max-height: 900px;
        }
    }
</style>

